{
  "exclude": ["node_modules", "**/**/*.js"],
  "include": ["src"],
  "compilerOptions": {
    "noUncheckedIndexedAccess": true,
    "outDir": "./dist",
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",

    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "forceConsistentCasingInFileNames": true
  }
}
